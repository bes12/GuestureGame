<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="besuhr.guesturegame">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Easy"
            android:label="EasyDifficulty"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <activity android:name=".Medium"
            android:label="MediumDifficulty"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <activity android:name=".Hard"
            android:label="HardDifficulty"
            android:theme="@style/AppTheme.NoActionBar"
            ></activity>

        <activity android:name=".Win"
            android:label="WinScreen"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>