<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="besuhr.guesturegame.MainActivity">

    <TextView
        android:id="@+id/game_block"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:background="@color/colorRed"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12pt"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="50dp"
        />

    <Button
        android:id="@+id/button_start"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:text="@string/button_start"
        android:layout_below="@+id/game_block"
        android:background="@color/colorGreen"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="125dp"
        android:onClick="beginGame"
        />

    <Button
        android:id="@+id/button_score"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:text="@string/button_score"
        android:layout_below="@+id/button_start"
        android:background="@color/colorPurple"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="125dp"
        android:onClick="viewScore"
        />

</RelativeLayout>
