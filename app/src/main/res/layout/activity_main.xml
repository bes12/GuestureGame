<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="besuhr.guesturegame.MainActivity">

    <TextView
        android:id="@+id/game_block"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:background="@color/colorBlue"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/colorWhite"
        android:textSize="18pt"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="25dp"
        />

    <Button
        android:id="@+id/button_easy"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="@string/button_easy"
        android:layout_below="@+id/game_block"
        android:background="@color/colorGreen"
        android:gravity="center"
        android:textSize="14pt"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="100dp"
        android:onClick="startEasy"
        />

    <Button
        android:id="@+id/button_medium"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="@string/button_medium"
        android:layout_below="@+id/button_easy"
        android:background="@color/colorYellow"
        android:textSize="14pt"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="100dp"
        android:onClick="startMedium"
        />

    <Button
        android:id="@+id/button_hard"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="@string/button_hard"
        android:layout_below="@+id/button_medium"
        android:background="@color/colorRed"
        android:textSize="14pt"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="100dp"
        android:onClick="startHard"
        />

</RelativeLayout>
